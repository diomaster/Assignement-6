<h1 class="d-flex justify-content-center">Quotes</h1>
<%= link_to new_quote_path, class: "btn btn-primary" do %>
 <i class="bi bi-plus" ></i> New Quote
 <%= link_to 'Sort By Saying', quotes_sort_by_saying_length_path %>
  <%= link_to 'Sort By Said By', quotes_sort_by_said_by_length_path %>
   <%= link_to 'Sort By Year', quotes_sort_by_year_length_path %>
<% end %>

<table class="table">
<thead>
<tr>
<th>Quote</th>
<th>Quote by</th>
<th>Votes</th>
<th>Year of Quote</th>
<th>Info</th>
<th></th>
<th></th>
<thead>
</tr>
  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.saying %></td>
        <td><%= quote.said_by %></td>
        <td><%= quote.votes %></td>
        <td><%= quote.year %></td>
        <td><%= quote.notes %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote), class: "btn btn-primary" %></td>
        <td><%= button_to 'Delete', quote, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

